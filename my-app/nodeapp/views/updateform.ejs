    <input type="text" id="contact" name="contact" value=<%=data.contact%>><br>
    <label for="fname">Price:</label><br>
    <input type="text" id="price" name="price" value=<%=data.prices%>><br>
    <label for="fname">Reviews:</label><br>
    <input type="text" id="review" name="review" value=<%=data.reviews%>><br>
