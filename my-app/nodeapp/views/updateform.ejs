<div style="padding:0 16px;">
  <center>
    <%
    if(listDesc.length!=0){
      listDesc.forEach(function(data){
    %>
    <div class="addform">
  <h2>Add Item</h2>
  <form action="finalupdate" method="POST" >
<label for="fname">Name of Product:</label><br>
    <input type="text" id="name" name="name" value=<%=data.name%> ><br>
