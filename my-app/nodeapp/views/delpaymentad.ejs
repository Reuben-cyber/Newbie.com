   <div class="table-data">
   <center>
<h2>List of Payments</h2>
    <table id="deleteuser">
        <tr>
          <th>Payment Id</th>
          <th>Transaction Id</th>
          <th>Date of payment</th>
          <th>Payment Amount</th>
          <th>Payment Status</th>
          <th>Product Name</th>
          <th>Product ID</th>
			<th>Delete</th>
      <th>Verify</th>
        </tr>
        <%
        if(PaymentData.length!=0){
        PaymentData.forEach(function(data){
        %>
        <tr>
          <td><%=data.pay_id%></td>
          <td><%=data.trans_id%></td>
          <td><%=data.date%></td>
          <td><%=data.amt%></td>
          <td><%=data.status%></td>
          <td><%=data.name%></td>
          <td><%=data.p_id%></td>
            <td><a href="/delpaymentad/delete/<%=data.p_id%>">Delete</a></td>
            <td><a href="/delpaymentad/status/<%=data.pay_id%>">Verify</a></td>
        </tr>
        <%  }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
	</center>
    </div>
</body>
