  border-radius: 4px;
  cursor: pointer;
}

.addform input[type=submit]:hover {
  background-color: #45a049;
}

.addform {
  border-bottom-right-radius:20px;
  background-color:#f4f0ec;
}
#deleteuser {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#deleteuser td, #deleteuser th {
  border: 1px solid #ddd;
  padding: 8px;
}

#deleteuser tr:nth-child(even){background-color: #f2f2f2;}

#deleteuser tr:hover {background-color: #ddd;}

#deleteuser th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #090a09;
  color: white;  
}
</style>
</head>
<body>

 
 <ul class="topnav">
  <li><a class="active" href="/adminfunction">Add User</a></li>
